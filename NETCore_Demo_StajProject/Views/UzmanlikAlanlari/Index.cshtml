@model List<NETCore_Demo_StajProject.DAL.UzmanlikAlanlari>
@{
    Layout = "_LayoutAdmin";
}
<a class="btn btn-info" style="background-color:#f6e1c5;margin-top:10px" asp-action="create" asp-controller="UzmanlikAlanlari">Yeni Uzmanlık Alanı Ekle</a>

<div style="height:700px">
