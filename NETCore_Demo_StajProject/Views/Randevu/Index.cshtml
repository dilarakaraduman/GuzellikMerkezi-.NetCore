@model List<NETCore_Demo_StajProject.Models.RandevuVM>

<table class="table" style="height:220px">
    <tr>
        <th>
            <a class="btn btn-info" style="width:20%;background-color:#f6e1c5"
               href="/Randevu/Create">Randevu Ekle</a>
        </th>
    </tr>
    <tr>
        <th>
            <a class="btn btn-info" style="width:20%;background-color:#f6e1c5"
               href="\Randevu/AktifRandevular">Aktif Randevular</a>
        </th>
    </tr>
    <tr>
        <th>
            <a class="btn btn-info" style="width:20%;background-color:#f6e1c5"
               href="\Randevu/GecmisRandevular">Geçmiş Randevular</a>
        </th>
    </tr>



    @if (Model != null && Model.Any())
    {
        var item = Model.First();
        <tr>
            <th>
                <a class="btn btn-info" style="width:20%;background-color:#f6e1c5"
                href="\Musteri/MusteriEdit/@item.Musteri.MusteriId">Bilgilerim</a>
            </th>

        </tr>
    }
</table>
