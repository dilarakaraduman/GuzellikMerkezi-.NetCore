@model List<NETCore_Demo_StajProject.Models.RandevuVM>
<form asp-controller="Randevu" asp-action="GecmisRandevular" method="post">

	<table class="table" style="background-color:#FDF5E6;height:180px">
	<thead>
		<tr>
			<th>Operasyon Adı</th>
			<th>Personel Adı</th>
			<th>Tarih:</th>
			<th>Saat:</th>
			<th>Salon:</th>
			
		</tr>

	</thead>
	@foreach (var item in Model)
	{
			<tr style="background-color:#FFEBCD">
			<td>@item.Operasyonlar.OperasyonAd</td>
			<td>@item.Personel.PersonelAd</td>
			<td>@(item.Randevu?.Tarih.ToShortDateString())</td>
			<td>@(item.Randevu?.saatId)</td>
			<td>@item.Salon.SalonNo</td>
	
		</tr>
	}
</table>
</form>