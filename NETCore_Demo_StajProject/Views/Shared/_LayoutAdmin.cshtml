<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Creative - Start Bootstrap Theme</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Bootstrap Icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Merriweather+Sans:400,700" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic" rel="stylesheet" type="text/css" />
    <!-- SimpleLightbox plugin CSS-->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/SimpleLightbox/2.1.0/simpleLightbox.min.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/css/styles.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark py-lg-2" id="mainNav">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CORE Güzellik Merkezi</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item px-lg-4">
                            <a class="nav-link text-uppercase" asp-area=""
                            asp-controller="Home"
                            asp-action="Index">Anasayfa</a>
                        </li>
       
                        <li class="nav-item px-lg-4">
                            <a class="nav-link text-uppercase" asp-area=""
                               asp-controller="Urunler"
                            asp-action="Index">Urun Yonetimi</a>
                        </li>

                        <li class="nav-item px-lg-4">
                            <a class="nav-link text-uppercase" asp-area="" 
                            asp-controller="Musteri"
                            asp-action="Index">Musteri Yonetimi</a>
                        </li>
                        <li class="nav-item px-lg-4">
                            <a class="nav-link text-uppercase" asp-area=""
                               asp-controller="Personel"
                            asp-action="Index">Personel Yonetimi</a>
                        </li>
                        <li class="nav-item px-lg-4">
                            <a class="nav-link text-uppercase" asp-area=""
                               asp-controller="Home"
                            asp-action="Cikis">Çıkış</a>
                        </li>


                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-faded text-center py-3">
        <div class="container">
            &copy; 2022 - NETCore_Demo_StajProject - <a asp-area="" asp-controller="Home" asp-action="Iletisim">İletişim</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
